<h1>Listing garages</h1>


<table>
<% @garages.each do |garage| %>
	<tr class="<%= cycle('list_line_odd', 'list_line_even') %>">
		<td class="list_description">
			<dl>
				<dt>Name: <%= garage.name %></dt>
				<dt>Address: <%= garage.address %></dt>
				<dt>Phone: <%= garage.phone %></dt>
				<dt>Manager: <%= garage.manageName %></dt>
			</dl>
		</td>
		
	
		<% if session[:employee_id] %>
		<td class="list_actions">
			<dt><%= link_to 'Show', garage %></dt>
			<dt><%= link_to 'Edit', edit_garage_path(garage) %></dt>
			<dt><%= link_to 'Destroy', garage, confirm: 'Are you sure?', method: :delete %></dt>
		</td>
		<% end %>
  </tr>
<% end %>
</table>

<br />
<% if session[:employee_id] %>
<%= link_to 'New Garage', new_garage_path %>
<% end %>
