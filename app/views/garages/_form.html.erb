<%= form_for (@garage), :validate => true do |f| %>
  <% if @garage.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(@garage.errors.count, "error") %> prohibited this garage from being saved:</h2>

      <ul>
      <% @garage.errors.full_messages.each do |msg| %>
        <li><%= msg %></li>
      <% end %>
      </ul>
    </div>
  <% end %>
	
	<h1>All Fields with a * must be filled</h1>
	
	<div id="name">
		<div id="fillup"> Please complete this field</div>
		<div class="field">
			<%= f.label :name %><br />
			<%= f.text_field :name %>*
		</div>
	</div>
  
	<div id="address">
		<div id="valid"> Please enter a valid address</div>
		<div class="field">
			<%= f.label :address %><br />
			<%= f.text_field :address %>*
		  </div>
	</div> 
  
	<div class="field">
		<%= f.label :full %>*<br />
		<%= f.check_box :full %>
	</div>
  
	<div class="field">
		<%= f.label :phone %>*<br />
		<%= f.number_field :phone %>
	</div>
  
  <div id="name">
		<div id="fillup"> Please enter the managers Name</div>
		<div class="field">
			<%= f.label :manageName %>*<br />
			<%= f.text_field :manageName %>
		</div>
	</div>
	
	<div class="actions">
		<%= f.submit %>
	</div>
<% end %>
