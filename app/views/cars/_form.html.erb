<%= form_for (@car), :validate => true do |f| %>
  <% if @car.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(@car.errors.count, "error") %> prohibited this car from being saved:</h2>

      <ul>
      <% @car.errors.full_messages.each do |msg| %>
        <li><%= msg %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

  <h1>All Fields with a * must be filled</h1>
	<div class="field">
		<%= f.label :make %>*<br />
		<%= f.text_field :make %>
	</div>
  
	<div class="field">
		<%= f.label :model %>*<br />
		<%= f.text_field :model %>
	<div>
  
	<div class="field">
		<%= f.label :Price %>*<br />
		<%= f.text_field :price %>
	</div>
  
	<div class="field">
		<%= f.label :age %>*<br />
		<%= f.date_select :age %>
	</div>
  
  
	<div id="car_reg">
		<div id="reg"> Please select a valid car reg</div>
		<div class="field">
			<%= f.label :Reg %>*<br />
			<%= f.text_field :Reg %>
		</div>
	</div>
  
	<div class="field">
		<%= f.label :color %>*<br />
		<%= f.text_field :color %>
	</div>
  
	<div class="field">
		<%= f.label :version %>*<br />
		<%= f.text_field :version %>
	</div>
  
	<div id="Garage_id">
		<div id="g_id"> Please select a valid Garage</div>
		<div class="field">
			<%= f.label :garage_id %>*<br />
			<%= f.collection_select :garage_id, Garage.all, :id, :name %> 
		</div>
	</div>
  
  <div class="field">
    <%= f.label :photo %>*<br />
	<%= f.text_field :photo %>
  </div>
  
  <div class="actions">
    <%= f.submit %>
  </div>
  
<% end %>
