<%= form_for (@employee), :validate => true do |f| %>
  <% if @employee.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(@employee.errors.count, "error") %> prohibited this employee from being saved:</h2>

      <ul>
      <% @employee.errors.full_messages.each do |msg| %>
        <li><%= msg %></li>
      <% end %>
      </ul>
    </div>
  <% end %>
  
	<h1>Please fill in all lines marked with *</h1>
	
	<div id="name">
		<div id="fillup"> Please complete this field</div>
		<div class="field">
			<%= f.label :name %><br />
			<%= f.text_field :name %>*
		</div>
	</div>
	
	
	<div class="field">
		<%= f.label :password %>*<br />
		<%= f.password_field :password%>
	</div>
  
  <div id="password">
			<div id="confirm"> Please enter same password as above</div>	
			<div class="field"> 
				<%= f.label :password_confirmation %>*<br />
				<%= f.password_field :password_confirmation %>
		</div>
	</div>

	<div id="email">
		<div id="properAddress"> Valid email address Required</div>
		<div class="field">
			<%= f.label :email %><br /> 
			<%= f.text_field :email %>* 
			</div>
	</div>
	
	<div id="address">
		<div id="valid"> Please enter a valid address</div>
		<div class="field">
			<%= f.label :address %><br />
			<%= f.text_field :address %>*
		  </div>
	</div> 
	
	<div class="field">
		<%= f.label :phone %>*<br />
		<%= f.number_field :phone %>
	</div>
  
	<div class="field">
		<%= f.label :experience %>*<br />
		<%= f.text_field :experience %>
	</div>
  
	<div id="Garage_id">
		<div id="g_id"> Please select a valid Garage</div>
		<div class="field">
			<%= f.label :garage_id %>*<br />
			<%= f.collection_select :garage_id, Garage.all, :id, :name %> 
		</div>
	</div>
  
	<div class="field">
		<%= f.label :role %>*<br />
		<%= f.text_field :role %>
	</div>
  
	<div class="actions">
		<%= f.submit %>
	</div>
<% end %>
